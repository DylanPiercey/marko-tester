{
  "name": "marko-tester",
  "version": "9.3.1",
  "description": "Assist Marko components testing using Jest.",
  "repository": {
    "type": "git",
    "url": "git@github.com:oxala/marko-tester.git"
  },
  "main": "./src/index",
  "scripts": {
    "postinstall": "node ./src/generate-marko-module-map.js",
    "lint": "eslint src tests",
    "test": "jest",
    "clean": "markoc . --clean && rm -rf coverage",
    "prepush": "yarn lint && yarn test",
    "commitmsg": "commitlint -e",
    "release": "semantic-release"
  },
  "keywords": [
    "marko",
    "test",
    "tester",
    "marko-tester",
    "coverage",
    "jest",
    "unit",
    "component"
  ],
  "author": "Ryshkov, Gleb <gleb@ryshkov.com>",
  "license": "MIT",
  "dependencies": {
    "glob": "^7.1.3",
    "just-clone": "^3.1.0",
    "stack-trace": "0.0.9"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.1.2",
    "@commitlint/config-conventional": "^7.1.2",
    "@lasso/marko-taglib": "^1.0.12",
    "@semantic-release/changelog": "^3.0.0",
    "@semantic-release/git": "^7.0.3",
    "eslint": "^5.6.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.22.0",
    "husky": "^0.14.3",
    "jest": "^23.6.0",
    "marko": "^4.13.5",
    "marko-widgets": "^7",
    "semantic-release": "^15.9.16"
  },
  "peerDependencies": {
    "jest": "^23",
    "marko": "^4.5"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release": {
    "prepare": [
      {
        "path": "@semantic-release/changelog",
        "changelogFile": "CHANGELOG.md"
      },
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ],
    "assets": [
      "CHANGELOG.md",
      "package.json"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "rootDir": "./",
    "coverageDirectory": "<rootDir>/coverage/",
    "roots": [
      "<rootDir>/tests/"
    ],
    "transform": {
      "^.+\\.marko$": "<rootDir>/preprocessor.js"
    },
    "testRegex": ".*\\.spec\\.(js)$",
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "marko"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js}",
      "src/**/*.{marko}",
      "!test/**",
      "!**/node_modules/**"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "plugins": [
      "jest"
    ],
    "env": {
      "browser": true,
      "jest/globals": true
    }
  }
}
