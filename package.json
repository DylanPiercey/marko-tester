{
  "name": "marko-tester",
  "version": "6.0.0",
  "description": "Assist Marko components unit/client testing",
  "repository": {
    "type": "git",
    "url": "git@github.corp.ebay.com:SellerHub/marko-tester.git"
  },
  "main": "./source/",
  "bin": {
    "markotester": "./source/markotester.js"
  },
  "scripts": {
    "test": "npm run eslint && npm run coverage",
    "eslint": "./node_modules/.bin/eslint source",
    "unit-test": "markotester test --no-coverage",
    "coverage": "istanbul cover ./node_modules/.bin/_mocha test/marko-tester.config.js $(find test -name '*.spec.js')",
    "clean": "rm -rf .beans .cache source/generated-tests",
    "bump": "sh ./tasks/bump.sh"
  },
  "precommit": [
    "test"
  ],
  "keywords": [
    "marko",
    "test",
    "marko-tester",
    "coverage",
    "eslint",
    "lint"
  ],
  "author": "Ryshkov, Gleb <gryshkov@ebay.com>",
  "license": "ISC",
  "dependencies": {
    "app-module-path": "^2.0.0",
    "bluebird": "^3.4.6",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "eslint": "^3.6.1",
    "eslint-config-airbnb-base": "^8.0.0",
    "eslint-plugin-mocha": "^4.7.0",
    "fs-extra": "^0.30.0",
    "glob": "^7.0.5",
    "html-normalizer": "^6.0.0",
    "i18n-ebay": "^0.3.17",
    "istanbul": "^0.4.4",
    "jquery": "^2.2.3",
    "jsdom": "^9.2.0",
    "jshint": "^2.9.3",
    "lasso": "^2.4.1",
    "lasso-less": "^2.1.2",
    "lasso-marko": "^2.0.4",
    "lodash": "^4.13.1",
    "marko": "^3.5.0",
    "marko-widgets": "^6.1.1",
    "mocha": "^3.1.0",
    "optimist": "^0.6.1",
    "rewire": "^2.5.2",
    "sinon": "^1.17.4",
    "sinon-chai": "^2.8.0",
    "stack-trace": "0.0.9"
  },
  "devDependencies": {
    "pre-commit": "^1.1.3"
  }
}
